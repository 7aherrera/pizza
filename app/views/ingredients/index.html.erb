<p id="notice"><%= notice %></p>

<h1>Listing Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Vegetarian</th>
      <th>Salty</th>
      <th>Sweet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>

        <% if ingredient.vegetarian %>
          <td>Yes</td>
          <% else%>
            <td> </td>
          <% end %>

        <% if ingredient.salty %>
          <td>Yes</td>
          <% else%>
            <td> </td>
          <% end %>

        <% if ingredient.sweet %>
        <td>Yes</td>
          <% else%>
            <td> </td>
          <% end %>

        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

